<UserControl x:Class="Lab.App.UserControls.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab.App.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="200" Loaded="UserControl_Loaded">
    <Grid>
        <Label Content="Login:" HorizontalAlignment="Left" Margin="18,19,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox Name="loginTextBox"  HorizontalAlignment="Left" Height="23" Margin="18,45,0,0" TextWrapping="Wrap" Text="{Binding Login}" VerticalAlignment="Top" Width="160"/>
        <Label Content="Senha:" HorizontalAlignment="Left" Margin="18,69,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <PasswordBox Name="senhaPasswordBox" HorizontalAlignment="Left" Margin="18,95,0,0" VerticalAlignment="Top" x:FieldModifier="private" Width="160" Height="23"/>
        <TextBlock Name="emojiText" HorizontalAlignment="Left" Margin="141,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="49"/>
    </Grid>
</UserControl>
